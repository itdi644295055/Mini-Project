public void cleartext(){
        txtId.setText("");
        txtName.setText("");
        txtSurname.setText("");
        txtMidterm.setText("");
        txtFinal.setText("");
        txtTotal.setText("");
        txtGrade.setText("");      
    }
public void clearGradeScore(){
        lblGradeA.setText(".................");
        lblGradeB.setText(".................");
        lblGradeC.setText(".................");
        lblGradeD.setText(".................");
        lblGradeE.setText(".................");
        lblTotal.setText(".................");
        lblMaxScore.setText(".................");
        lblMinScore.setText(".................");
        lblAvgScore.setText(".....................");
    }
public void setEnabledTrue() {
        btnAdd.setEnabled(true);
        txtId.setEditable(true);
        txtName.setEditable(true);
        txtSurname.setEditable(true);
        txtMidterm.setEditable(true);
        txtFinal.setEditable(true);
    }
